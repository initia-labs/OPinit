{
  "name": "@initia/rollup",
  "version": "0.1.0",
  "description": "Optimistic rollup for initia",
  "main": "index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "concurrently \"npm:executor\" \"npm:output\"",
    "executor": "ts-node -r tsconfig-paths/register ./src/worker/bridgeExecutor/index.ts",
    "batch": "sleep 5 && ts-node -r tsconfig-paths/register ./src/worker/batchSubmitter/index.ts",
    "challenger": "sleep 5 &&  ts-node -r tsconfig-paths/register ./src/worker/challenger/index.ts",
    "output": "sleep 5 && ts-node -r tsconfig-paths/register ./src/worker/outputSubmitter/index.ts",
    "build": "tsc --module commonjs && webpack --mode production",
    "test": "jest",
    "test:integration": "ts-node -r tsconfig-paths/register ./src/test/integration.ts",
    "prettier": "prettier --write ./src/**/**/**/**/*.ts",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "do": "ts-node -T --files -r tsconfig-paths/register",
    "apidoc": "npm run do src/loader/generateApiDoc.ts",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/initia-labs/initia-rollup.git"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "always"
  },
  "author": "initia-labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/initia-labs/batch-submitter/issues"
  },
  "homepage": "https://github.com/initia-labs/batch-submitter#readme",
  "devDependencies": {
    "@testcontainers/postgresql": "^10.2.1",
    "@types/chalk": "^2.2.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^15.14.9",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "concurrently": "^8.2.1",
    "eslint": "^7.13.0",
    "jest": "^27.5.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "ts-jest": "^27.1.5",
    "ts-loader": "^8.0.11",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-jest": "^0.0.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.2.4",
    "webpack": "^4",
    "webpack-bundle-analyzer": "^4.1.0"
  },
  "dependencies": {
    "@initia/builder.js": "^0.0.7",
    "@initia/initia.js": "^0.1.4",
    "@initia/minitia.js": "^0.0.6",
    "@koa/cors": "^4.0.0",
    "@sentry/node": "^7.60.0",
    "@types/bluebird": "^3.5.38",
    "@types/dockerode": "^3.3.19",
    "@types/pg": "^8.10.2",
    "@types/ws": "^8.5.5",
    "apidoc": "^1.1.0",
    "apidoc-core": "^0.15.0",
    "bluebird": "^3.7.2",
    "chalk": "^2.4.2",
    "dockerode": "^3.3.5",
    "koa": "^2.14.2",
    "koa-body": "^5.0.0",
    "koa-helmet": "^7.0.2",
    "koa-joi-controllers": "^1.2.3",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^12.0.0",
    "koa-static": "^5.0.0",
    "merkletreejs": "0.2.16",
    "pako": "^2.1.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "sha3": "^2.1.4",
    "testcontainers": "^10.2.1",
    "typeorm": "^0.3.17",
    "undici": "^5.22.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zlib": "^1.0.5"
  }
}
